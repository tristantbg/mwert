@keyframes move {
  from {
    transform(scaleX(1))
  }
  to {
    transform(scaleX(2))
  }
}

@keyframes distort {
  from {
    transform(scaleX(1))
  }
  to {
    transform(scaleX(1.3))
  }
}

@keyframes hue-plus {
  from {
    vendor(filter, hue-rotate(-30deg))
  }
  to {
    vendor(filter, hue-rotate(80deg))
  }
}

@keyframes hue-minus {
  from {
    vendor(filter, hue-rotate(30deg))
  }
  to {
    vendor(filter, hue-rotate(-80deg))
  }
}

@keyframes hide-container {
  from {
    width 100%
    left 0
  }
  to {
    width 0
    left 50%
  }
}

@keyframes hide-container-safari {
  from {
    transform(scaleX(1))
  }
  to {
    transform(scaleX(0))
  }
}

.hue-plus
	animation-name(hue-plus)
	animation-duration(15s)
	animation-timing-function(linear)
	animation-iteration-count(infinite)
	animation-direction(alternate)

.hue-minus
	animation-name(hue-minus)
	animation-duration(5s)
	animation-timing-function(linear)
	animation-iteration-count(infinite)
	animation-direction(alternate)

.move
	animation-name(move)
	animation-duration(180s)
	animation-timing-function(linear)
	animation-iteration-count(infinite)
	animation-direction(normal)
	
.distort
	animation-name(distort)
	animation-duration(15s)
	animation-timing-function(cubic-bezier(.80,0,.20,1))
	animation-iteration-count(infinite)
	animation-direction(alternate)

.difference
	mix-blend-mode difference

.multiply
	mix-blend-mode multiply

.exclusion
	mix-blend-mode exclusion

#intro
	position fixed
	top 0
	left 0
	width 100vw
	height 100vh
	z-index 9000
	cursor pointer
	overflow hidden
	+below($md)
		display none

.back
	width 100vw
	height 100vh
	position absolute
	top 0
	left 0
	z-index 0
	background-size cover
	background-position center

.front
	width 200vw
	height 100vh
	position absolute
	top 0
	left 0
	z-index 1
	background-size 50%
	background-position 0%

#intro.hidden
		animation-name(hide-container-safari)
		animation-duration(1.8s)
		animation-timing-function(cubic-bezier(.60,0,.40,1))
		animation-fill-mode(forwards)
		.back
			animation-name(move)
			animation-duration(1.8s)
			animation-timing-function(cubic-bezier(.60,0,.40,1))
			animation-fill-mode(forwards)